<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722">


        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Start-end Date"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editDate"
                android:layout_width="100dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btnDate"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="Pick" />

            <TextView
                android:id="@+id/dash"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="To"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:id="@+id/editendDate"
                android:layout_width="100dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/endDate"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="pick" />

        </LinearLayout>

        <TextView
            android:id="@+id/Space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Period "
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="33dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/period_spinner"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.14"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/per"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="per"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <Spinner
                android:id="@+id/realtime_spinner"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/Space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Flowers"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="130dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost Price"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <SeekBar
            android:id="@+id/cost_seekBar"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/text1"
            android:max="100"
            android:thumbTint="#666666" />

        <TextView
            android:id="@+id/Space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Performace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overall Performance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wholesaler_result"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wholesaler" />

            <Button
                android:id="@+id/retailer_result"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Retailer" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>